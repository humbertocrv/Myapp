      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

     <div class="field">
        <%= f.label :password_digest %>
        <%= f.password_field :password_digest %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmar password" %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="actions">
        <%= f.submit "Crear cuenta", class: "btn btn-large btn-primary" %>
      </div>
    </div>
  </div>


<% end %>
