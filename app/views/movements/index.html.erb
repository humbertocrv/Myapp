<p id="notice"><%= notice %></p>

<h1>Movements</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Credit</th>
      <th>Debit</th>
      <th>Balance</th>
      <th>Costcenter</th>
      <th>Third</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.date %></td>
        <td><%= movement.description %></td>
        <td><%= movement.credit %></td>
        <td><%= movement.debit %></td>
        <td><%= movement.balance %></td>
        <td><%= movement.costcenter_id %></td>
        <td><%= movement.third_id %></td>
        <td><%= link_to 'Show', movement %></td>
        <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
        <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

